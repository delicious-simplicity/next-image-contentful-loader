{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
